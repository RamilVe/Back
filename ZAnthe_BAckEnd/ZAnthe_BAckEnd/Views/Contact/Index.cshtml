@model ContactVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <button onclick="topFunction()" id="myBtn"><i class="fa-solid fa-angle-up"></i></button>
    <div class="title">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Contact us</h2>
                    <ul id="" class="breadcrumb">
                        <li class="item"><a href="index.html">Home /</a></li>
                        <li class="item-current item">Contact us</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-6 col-12">
                    <div class="left">
                        <form form class="form" asp-controller="Contact" asp-action="Index" method="post">
                            <div class="text-mail">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-12">
                                            <input type="text" required placeholder="Your Name" asp-for="Name">
                                        </div>
                                        <div class="col-lg-6  col-md-12">
                                            <input type="text" required placeholder="Your Phone" asp-for="Phone">
                                        </div>
                                        <div class="col-lg-6  col-md-12">
                                            <input type="email" required placeholder="Your Email" asp-for="Email">
                                        </div>
                                        <div class="col-lg-6  col-md-12">
                                            <input type="text" required placeholder="Subject" asp-for="Subject"> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <textarea  id="" cols="30" rows="10" placeholder="Your message" asp-for="Message"></textarea>
                            <input type="submit" class="button" required value="Send Message">
                        </form>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="right">
                        <div class="map">
                            <iframe class="google-map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3149.9345720506476!2d20.623064575117464!3d37.86182130714221!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x13676bf158181ff9%3A0xce95509469faad2a!2sNavagio%20Beach%20Viewpoint!5e0!3m2!1sen!2saz!4v1688369720422!5m2!1sen!2saz" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                        <div class="social-media">
                            <i id="facebook" class="fa fa-facebook" aria-hidden="true"></i>
                            <i id="twitter" class="fa fa-twitter" aria-hidden="true"></i>
                            <i id="pinterest" class="fa fa-pinterest" aria-hidden="true"></i>
                            <i id="linkedin" class="fa-brands fa-linkedin-in"></i>
                            <i id="youtube" class="fa fa-youtube" aria-hidden="true"></i>
                            <i id="instagram" class="fa fa-instagram" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section css
    {
    <link rel="stylesheet" href="~/assets/css/contact style.css">
}