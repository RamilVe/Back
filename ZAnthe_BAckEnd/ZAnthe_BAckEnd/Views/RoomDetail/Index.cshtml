@model RoomDetailVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <main>
        <button onclick="topFunction()" id="myBtn"><i class="fa-solid fa-angle-up"></i></button>
        <div class="title">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-between">
                        <div class="name">
                            <h2>@Model.room.Name</h2>
                            <ul id="" class="breadcrumb">
                                <li class="item"><a href="index.html">Home /</a></li>
                                <li class="item"><a href="rooms.html">Rooms /</a></li>
                                <li class="item-current item">Rooms</li>
                            </ul>
                        </div>
                        <div class="price">
                            <p>€@Model.room.Price</p>
                            <span>per night</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="image">
                            <img src="~/assets/img/allimg/@Model.room.Image" alt="">
                        </div>
                        <div class="room-info">
                            <div class="item">
                                <i class="fa-solid fa-children"></i>
                                <div class="room-info-content">
                                    <p>Max. Guests</p>
                                    <span>4 Adults / 2 Children</span>
                                </div>
                            </div>
                            <div class="item">
                                <i class="fa-regular fa-calendar-days"></i>
                                <div class="room-info-content">
                                    <p>Booking Nights</p>
                                    <span>5 Min.</span>
                                </div>
                            </div>
                            <div class="item">
                                <i class="fa-solid fa-bed"></i>
                                <div class="room-info-content">
                                    <p>Bed Type</p>
                                    <span>Twins Bed</span>
                                </div>
                            </div>
                            <div class="item">
                                <i class="fa-solid fa-ruler"></i>
                                <div class="room-info-content">
                                    <p>Area</p>
                                    <span>92m<sup>2</sup></span>
                                </div>
                            </div>
                        </div>
                        <div class="content">
                            <p>@Model.room.Desc</p>
                        </div>
                        <div class="room-services-list">
                            <h5>Room Services</h5>
                                <div class="items">
                                    @foreach (var item in Model.roomServices)
                            {
                                <div class="col-lg-4 col-md-6 col-6">
                                    <div class="item">
                                        <i class="@item.Img"></i>
                                        <span>@item.Name</span>
                                    </div>
                                </div>

                            }
                                </div>                               
                        </div>
                        <div class="similar-rooms">
                            <h5>Similar Rooms</h5>
                            <div class="items">
                            @foreach (var item in Model.SimilarRooms)
                            {
                                <div class="col-lg-3">
                                    <div class="item">
                                        <a asp-action="index" asp-route-id="@item.Id">
                                            <div class="image">
                                                <img src="~/assets/img/allimg/@item.Image" alt="">
                                                <span class="left">@item.Name</span>
                                                <div class="price">
                                                    <strong>€@item.Price</strong>
                                                    <span>/ night</span>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>

                            }
                        </div>
                            
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="branch">
                            <span>This room is part of</span>
                            <a href="branch.html">Zante Italy</a>
                        </div>
                        <section id="checka">                             
                            <div class="checking-a">
                                <div class="checka-content-box">
                                    <!-- <input type="text" name="" id="daterange"> -->
                                    <!-- <p id="demo"></p> -->
                                    <div class="container">
                                        <div class="row">
                                            <div class="book-your-room">
                                                <h2>Book Your Room</h2>
                                            </div>
                                            <div class="col-lg-12">
                                                    <input type="button"  class="form-control rounded-0 text-start" id="daterange">
                                                    <!-- <input type="date" id="dateInput" class="form-control rounded-0"> -->
                                            </div>
                                            <div class="col-lg-12">
                                                    <input type="button" class="form-control rounded-0 text-start" id="addGuestBtn" value="Guest - 1">
                                                    <div class="guest-member-content">
                                                        <span></span>
                                                        <div class="guest-title">
                                                            <div class="d-flex justify-content-between mb-3">
                                                                <div><b>Adults</b><br>Ages 18+</div>
                                                                <div class="guest-add-content">
                                                                    <button id="adultsubGuestNum">-</button>
                                                                    <strong id="adult-number">1</strong>
                                                                    <button id="adultaddGuestNum">+</button>
                                                                </div>
                                                            </div>
                                                            <div class="d-flex justify-content-between">
                                                                <div><b>Children</b><br>Ages 4 - 18</div>
                                                                <div class="guest-add-content">
                                                                    <button id="childsubGuestNum">-</button>
                                                                    <strong id="child-number">0</strong>
                                                                    <button id="childaddGuestNum">+</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <a class="btn" href="book-online.html"><span>Check Availability</span></a>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </section>
                        <img width="500" height="777" src="https://demo.zantetheme.com/wp-content/uploads/2018/07/banner.jpg" class="image wp-image-1381  attachment-full size-full" alt="" decoding="async" loading="lazy" style="max-width: 100%; height: auto;" srcset="https://demo.zantetheme.com/wp-content/uploads/2018/07/banner.jpg 500w, https://demo.zantetheme.com/wp-content/uploads/2018/07/banner-193x300.jpg 193w, https://demo.zantetheme.com/wp-content/uploads/2018/07/banner-51x80.jpg 51w" sizes="(max-width: 500px) 100vw, 500px">
                    </div>
                </div>
            </div>
        </div>
    </main>

@section css {
    <link rel="stylesheet" href="~/assets/css/room-details style.css">
}

