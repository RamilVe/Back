
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ForgetPassword

<main>
    <button onclick="topFunction()" id="myBtn"><i class="fa-solid fa-angle-up"></i></button>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login">
                    <div class="title">
                        <h3>Forgot Password</h3>
                    </div>
                    <div class="text-danger mb-2 mt-3" asp-validation-summary="All"></div>
                    <form form asp-controller="Account" asp-action="ForgotPassword" method="post" enctype="application/x-www-form-urlencoded">
                        <input type="text" placeholder=" Email" asp-for="Email">
                        <input class="button" onclick="(()=>{alert('Check your email account')})()" type="submit" placeholder="Submit">
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section css {
    <link rel="stylesheet" href="~/assets/css/login.css">
}

